<mvc:View
    controllerName="wb.project1.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:core="sap.ui.core"

    xmlns:m="sap.m"
    xmlns:layout="sap.ui.layout"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="false"
        sections="{sectionModel>/Sections}"
    >
        <headerTitle>
            <ObjectPageHeader
                id="hid"
                objectTitle="Querys APP "
                class="customTextColor"
            />
        </headerTitle>

        <headerContent>
            <m:ObjectAttribute
                id="g"
                title=""
                text="Lista de Querys "
            />
        </headerContent>

        <sections>
            <ObjectPageSection
                id="sectionTiles"
                titleUppercase="false"
                title="{sectionModel>SectionName}"
            >
                   <subSections>
                <ObjectPageSubSection
                    id="subSectionTiles"
                    titleUppercase="false"
                    title="{sectionModel>SectionName}"
                >
                   <m:HBox id="ef" wrap="Wrap" justifyContent="Start" items="{sectionModel>Tiles}">
                        <m:GenericTile id="hoddl"
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                            header="{sectionModel>TileName}"
                            subheader="{sectionModel>QueryString}"
                            press="onTilePress"
                             url="/sap/bc/ui5_ui5/sap/FLP?sap-client=500#{sectionModel>QueryString}"
                           
                             >
                           
                         <m:customData>
                            <core:CustomData key="query" value="{sectionModel>QueryString}" />
                        </m:customData>


                            <m:tileContent>
                                <m:TileContent id="hol">
                                    <m:content>
                                        <m:ImageContent id="hodl"
                                            src="sap-icon://home-share"
                                        />
                                    </m:content>
                                </m:TileContent>
                            </m:tileContent>
                        </m:GenericTile>
                    </m:HBox>
                </ObjectPageSubSection>
            </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>

    <m:Page
        id="page"
        title="{i18n>title}"
    >
        <!-- Aquí iría el contenido de la página -->
    </m:Page>
</mvc:View>
